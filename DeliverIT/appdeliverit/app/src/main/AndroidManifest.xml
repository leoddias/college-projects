<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sourcey.appdeliverit">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.octavio.appdeliverit.ListaTipoProdActivity"
            android:label="Categorias" />
        <activity
            android:name="com.octavio.appdeliverit.ListaProdActivity"
            android:label="Produtos" />
        <activity android:name="com.octavio.appdeliverit.CarrinhoActivity"
            android:label="Entrega"/>
        <activity
            android:name="com.octavio.appdeliverit.MainActivity"
            android:label="Meu carrinho" />
        <activity
            android:name="com.octavio.appdeliverit.LoginActivity"
            android:theme="@style/AppTheme.Dark">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.octavio.appdeliverit.RegistroActivity"
            android:theme="@style/AppTheme.Dark" />
    </application>

</manifest>